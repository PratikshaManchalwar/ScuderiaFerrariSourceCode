<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/driverLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/miniPadding"
        >

        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/marginStart"
            android:orientation="vertical"
            android:gravity="start"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driverRow"
                android:textSize="@dimen/smallestTextSize" />

            <TextView
                android:id="@+id/driverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/smallTextSize"
                android:layout_gravity="center|start"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/marginEnd"
            android:layout_toEndOf="@+id/nameLayout"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/racesWonRow"
                android:textSize="@dimen/smallestTextSize" />

            <TextView
                android:id="@+id/noOfRaceWon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/smallTextSize"
                android:layout_gravity="center|end"
                android:textColor="@color/colorGreen"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>